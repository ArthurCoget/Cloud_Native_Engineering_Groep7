{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "."
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
